<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.*?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="ca.arthurtse.nonogram.puzzle.PuzzleController" fx:id="gridPane">
    <fx:define>
        <ToggleGroup fx:id="btnGroup"/>
    </fx:define>
    <HBox fx:id="colHints" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <VBox fx:id="rowHints" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Pane fx:id="tileGrid" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <HBox fx:id="buttonBox" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <RadioButton fx:id="fillButton" styleClass="tileButton" userData="Filled">
            <toggleGroup>
                <fx:reference source="btnGroup"/>
            </toggleGroup>
        </RadioButton>
        <RadioButton fx:id="emptyButton" styleClass="tileButton" userData="Empty">
            <toggleGroup>
                <fx:reference source="btnGroup"/>
            </toggleGroup>
        </RadioButton>
    </HBox>
</GridPane>
